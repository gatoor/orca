      "Name": "app1",
      "Version": "0.1",
      "Type": "worker",
      "InstallCommands": [
        {
          "Type": "EXEC_COMMAND",
          "Command": {
            "Path": "ls",
            "Args": "/home"
          }
        },
        {
          "Type": "FILE_COMMAND",
          "Command": {
            "Path": "/server/app1/app1.conf",
            "Args": "somefilecontent as a string"
          }
        }
      ],
      "QueryStateCommand": {
        "Type": "EXEC_COMMAND",
        "Command": {
          "Path": "wget",
          "Args": "http://localhost:1234/check"
        }
      },
      "RemoveCommand": {
        "Type": "EXEC_COMMAND",
        "Command": {
          "Path": "rm",
          "Args": "-rf /server/app1"
        }
      },
      "Needs": {
        "MemoryNeeds": 0.5,
        "CpuNeeds": 0.5,
        "NetworkNeeds": 0.5
      }
    },
