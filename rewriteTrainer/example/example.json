{
  "Trainer": {
    "Port": 5000
  },
  "Habitats": [
    {
      "Name": "habitat1",
      "Version": 0.1,
      "InstallCommands": [
        {
          "Type": "EXEC_COMMAND",
          "Command": {
            "Path": "ls",
            "Args": "/home"
          }
        },
        {
          "Type": "FILE_COMMAND",
          "Command": {
            "Path": "/etc/orca.conf",
            "Args": "somefilecontent as a string"
          }
        }
      ]
    },
    {
      "Name": "habitat2",
      "Version": 0.1,
      "InstallCommands": [
        {
          "Type": "EXEC_COMMAND",
          "Command": {
            "Path": "ps",
            "Args": "aux"
          }
        },
        {
          "Type": "FILE_COMMAND",
          "Command": {
            "Path": "/etc/orca.conf",
            "Args": "different config"
          }
        }
      ]
    }
  ],
  "Apps": [
    {
      "Name": "app1",
      "Version": 0.1,
      "Type": "worker",
      "InstallCommands": [
        {
         "Id":"id1",
          "Type": "EXEC_COMMAND",
          "Command": {
            "Path": "ls",
            "Args": "/home"
          }
        }
      ],
      "InstallFiles": [
        {
         "Id":"id2",
          "Type": "FILE_COMMAND",
          "Command": {
            "Path": "/server/app1/app1.conf",
            "Args": "somefilecontent as a string"
          }
        }
      ],
      "QueryStateCommand": [{
         "Id":"id3",

        "Type": "EXEC_COMMAND",
        "Command": {
          "Path": "wget",
          "Args": "http://localhost:1234/check"
        }
      }],
      "RemoveCommand": [{
         "Id":"id4",
        "Type": "EXEC_COMMAND",
        "Command": {
          "Path": "rm",
          "Args": "-rf /server/app1"
        }
      }],
      "Needs": {
        "MemoryNeeds": 0.5,
        "CpuNeeds": 0.5,
        "NetworkNeeds": 0.5
      }
    }
  ]
}
