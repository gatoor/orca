{
  "Trainer": {
    "Port": 5000
  },
  "Habitats": [
    {
      "Name": "habitat1",
      "Version": "0.1",
      "InstallCommands": [
        {
          "Type": "EXEC_COMMAND",
          "Command": {
            "Path": "ls",
            "Args": "/home"
          }
        },
        {
          "Type": "FILE_COMMAND",
          "Command": {
            "Path": "/etc/orca.conf",
            "Args": "somefilecontent as a string"
          }
        }
      ]
    },
    {
      "Name": "habitat2",
